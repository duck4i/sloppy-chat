{
  "version": "0.2.3",
  "name": "@duck4i/sloppy-chat",
  "private": true,
  "module": "index.ts",
  "type": "module",
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.7.2"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "bun run --cwd packages/runner start",
    "build": "bun run build:common && bun run build:client && bun run build:server",
    "build:common": "bun run --cwd packages/common build",
    "build:client": "bun run --cwd packages/client build",
    "build:server": "bun run --cwd packages/server build",
    "build:runner": "bun run --cwd packages/runner build",
    "test": "bun test --workspace",
    "clean": "bun run clean:common && bun run clean:client && bun run clean:server",
    "clean:common": "bun run --cwd packages/common clean",
    "clean:client": "bun run --cwd packages/client clean",
    "clean:server": "bun run --cwd packages/server clean",
    "clean:runner": "bun run --cwd packages/runner clean",
    "publish": "bun run build && pnpm publish --workspaces --no-private"
  }
}